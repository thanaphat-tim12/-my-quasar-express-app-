generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // ไม่มี url แล้ว!!!
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tasks")
}
